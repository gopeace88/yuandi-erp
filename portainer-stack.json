{
  "name": "yuandi-erp",
  "description": "YUANDI Collection Management System",
  "note": "1인 구매대행 비즈니스 관리 시스템",
  "categories": ["business", "management", "erp"],
  "platform": "linux",
  "logo": "https://portainer-io-assets.sfo2.digitaloceanspaces.com/logos/nginx.png",
  "repository": {
    "url": "https://github.com/gopeace88/yuandi-erp",
    "stackfile": "docker-compose.portainer.yml"
  },
  "env": [
    {
      "name": "NEXT_PUBLIC_SUPABASE_URL",
      "label": "Supabase URL",
      "description": "Supabase 프로젝트 URL",
      "default": "https://eikwfesvmohfpokgeqtv.supabase.co"
    },
    {
      "name": "NEXT_PUBLIC_SUPABASE_API_KEY",
      "label": "Supabase Public Key",
      "description": "Supabase anon/public 키"
    },
    {
      "name": "SUPABASE_API_KEY",
      "label": "Supabase Service Key",
      "description": "Supabase service_role 키 (비밀)"
    },
    {
      "name": "SESSION_SECRET",
      "label": "Session Secret",
      "description": "세션 암호화 키 (32자 이상)",
      "default": "change-this-to-random-32-character-string"
    },
    {
      "name": "NAS_IP",
      "label": "NAS IP Address",
      "description": "NAS 내부 IP 주소",
      "default": "192.168.1.100"
    },
    {
      "name": "PORT",
      "label": "Port",
      "description": "애플리케이션 포트",
      "default": "3000"
    }
  ],
  "volumes": [
    {
      "container": "/app/uploads",
      "bind": "/volume1/docker/yuandi-erp/uploads"
    },
    {
      "container": "/app/logs",
      "bind": "/volume1/docker/yuandi-erp/logs"
    }
  ],
  "ports": [
    "3000:3000/tcp"
  ]
}