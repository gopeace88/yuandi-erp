# Production Environment Variables for YUANDI ERP
# Copy this file to .env.production and fill in your actual values

# ============================================
# Supabase Configuration
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT].supabase.co:5432/postgres
DATABASE_POOL_SIZE=10
DATABASE_VERSION=14

# ============================================
# Application Configuration
# ============================================
NEXT_PUBLIC_APP_URL=https://yuandi-erp.com
NEXT_PUBLIC_APP_NAME=YUANDI ERP
NEXT_PUBLIC_APP_VERSION=1.0.0

# ============================================
# Security
# ============================================
JWT_SECRET=your-jwt-secret-key-minimum-32-characters
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data
WEBHOOK_SECRET=your-webhook-secret-for-external-integrations
CRON_SECRET=your-cron-secret-for-scheduled-jobs

# ============================================
# Email Configuration (SendGrid/Resend)
# ============================================
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@yuandi-erp.com
EMAIL_FROM_NAME=YUANDI ERP

# ============================================
# SMS Configuration (Twilio/Aligo)
# ============================================
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# Storage Configuration
# ============================================
STORAGE_PROVIDER=supabase
STORAGE_BUCKET_PRODUCTS=products
STORAGE_BUCKET_SHIPMENTS=shipments
STORAGE_MAX_FILE_SIZE=10485760

# ============================================
# External API Keys
# ============================================
# Daum Postcode API
NEXT_PUBLIC_DAUM_POSTCODE_KEY=your-daum-postcode-api-key

# Exchange Rate API
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest/CNY

# Tracking APIs
CJ_LOGISTICS_API_KEY=your-cj-logistics-api-key
HANJIN_API_KEY=your-hanjin-api-key

# ============================================
# Monitoring & Analytics
# ============================================
# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-key@sentry.io/your-project
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=your-org
SENTRY_PROJECT=yuandi-erp

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# LogRocket / FullStory
NEXT_PUBLIC_LOGROCKET_APP_ID=your-app-id

# ============================================
# Performance & Optimization
# ============================================
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_CACHE=true
CACHE_TTL=3600
REVALIDATE_TIME=60

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# API Rate Limits
API_RATE_LIMIT_AUTH=1000
API_RATE_LIMIT_GUEST=100
API_RATE_LIMIT_EXPORT=10

# ============================================
# Business Configuration
# ============================================
DEFAULT_CURRENCY=KRW
DEFAULT_LANGUAGE=ko
DEFAULT_TIMEZONE=Asia/Seoul
DEFAULT_EXCHANGE_RATE_CNY_KRW=185

# Stock Thresholds
DEFAULT_LOW_STOCK_THRESHOLD=5
AUTO_REORDER_ENABLED=false

# Order Configuration
ORDER_NUMBER_PREFIX=ORD
ORDER_AUTO_CONFIRM_PAYMENT=false
ORDER_CANCEL_WINDOW_HOURS=24

# Shipping Configuration
DEFAULT_COURIER=cj
FREE_SHIPPING_THRESHOLD=50000
DEFAULT_SHIPPING_FEE=3000

# ============================================
# Feature Flags
# ============================================
FEATURE_SMS_NOTIFICATIONS=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_AUTO_BACKUP=true
FEATURE_BULK_OPERATIONS=true
FEATURE_ADVANCED_REPORTING=true
FEATURE_CUSTOMER_PORTAL=true

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DESTINATION=file
LOG_FILE_PATH=/var/log/yuandi-erp
LOG_MAX_SIZE=20m
LOG_MAX_FILES=30d
LOG_ROTATION=daily

# ============================================
# Backup Configuration
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE=s3
AWS_BACKUP_BUCKET=yuandi-erp-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-northeast-2

# ============================================
# CDN Configuration
# ============================================
CDN_ENABLED=true
CDN_URL=https://cdn.yuandi-erp.com
IMAGE_OPTIMIZATION=true

# ============================================
# Maintenance Mode
# ============================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="시스템 점검 중입니다. 잠시 후 다시 이용해 주세요."
MAINTENANCE_END_TIME=2024-01-01T00:00:00Z

# ============================================
# Debug Settings (Set to false in production)
# ============================================
DEBUG_MODE=false
SHOW_SQL_QUERIES=false
ENABLE_PROFILING=false