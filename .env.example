# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-public-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=YUANDI ERP
NEXT_PUBLIC_APP_VERSION=1.0.0

# Email (Resend) - Required for email notifications
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# SMS (Twilio) - Required for SMS notifications
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Database Direct Connection (for migrations)
DATABASE_URL=postgresql://postgres:password@localhost:5432/yuandi

# CRON Secret (for scheduled jobs)
CRON_SECRET=your-random-cron-secret-at-least-32-characters

# Session Secret
SESSION_SECRET=your-session-secret-at-least-32-characters-long

# Environment
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
