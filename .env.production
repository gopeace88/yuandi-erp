# YUANDI Production Environment Variables
# ⚠️ NEVER commit this file to version control
# Copy to Vercel Dashboard > Settings > Environment Variables

# ============================================
# REQUIRED VARIABLES - Must be set in Vercel
# ============================================

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_API_KEY=your-anon-key-here
SUPABASE_API_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://yuandi.com

# Security Configuration
CSRF_SECRET=generate-32-char-random-string
ENCRYPTION_KEY=generate-64-char-hex-string
NEXTAUTH_SECRET=generate-another-32-char-random-string

# ============================================
# MONITORING & ANALYTICS
# ============================================

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-key@sentry.io/project-id
SENTRY_ORG=your-org
SENTRY_PROJECT=yuandi
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ENVIRONMENT=production

# Vercel Analytics (Auto-injected by Vercel)
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=auto-generated

# Google Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================
# EXTERNAL SERVICES
# ============================================

# Daum Postcode API
DAUM_POSTCODE_KEY=your-daum-postcode-api-key

# Email Service (Optional - for future)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@yuandi.com

# SMS Service (Optional - for future)
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret
SMS_FROM=YUANDI

# ============================================
# CRON & SCHEDULED JOBS
# ============================================

# Cron Secret for securing scheduled endpoints
CRON_SECRET=generate-random-cron-secret

# ============================================
# PERFORMANCE & OPTIMIZATION
# ============================================

# Revalidation Settings
REVALIDATE_SECRET=generate-revalidation-secret

# Image Optimization
NEXT_PUBLIC_IMAGE_DOMAINS=yuandi.com,*.supabase.co

# ============================================
# FEATURE FLAGS (Optional)
# ============================================

NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_SENTRY=true
NEXT_PUBLIC_MAINTENANCE_MODE=false

# ============================================
# DATABASE CONNECTION (Backup)
# ============================================

DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require
DIRECT_URL=postgresql://user:password@host:port/database?sslmode=require

# ============================================
# RATE LIMITING
# ============================================

RATE_LIMIT_API=60
RATE_LIMIT_AUTH=5
RATE_LIMIT_WINDOW=60000

# ============================================
# LOGGING
# ============================================

LOG_LEVEL=error
SECURITY_LOG_ENDPOINT=https://your-logging-service.com/api/logs

# ============================================
# DEPLOYMENT
# ============================================

VERCEL_GIT_COMMIT_SHA=auto-generated
VERCEL_GIT_COMMIT_MESSAGE=auto-generated
VERCEL_ENV=production
VERCEL_URL=auto-generated